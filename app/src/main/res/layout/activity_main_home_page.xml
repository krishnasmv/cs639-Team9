<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomnav"
        android:background="@drawable/image7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- App Header -->
            <RelativeLayout
                android:layout_width="159dp"
                android:layout_height="118dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="128dp"
                    android:layout_height="81dp"
                    android:layout_above="@+id/appTitle"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="9dp"
                    android:layout_marginBottom="-17dp"
                    android:src="@mipmap/ic_launcher_adaptive_fore"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/appTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="17dp"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"
                    android:text="We Care"
                    android:textColor="#4CAF50"
                    android:textSize="28sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:id="@+id/welcomeMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Health Companion"
                android:textSize="18sp"
                android:textColor="#757575"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal" />

            <!-- Search Bar -->
            <EditText
                android:id="@+id/searchSymptoms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/baseline_search_24"
                android:drawablePadding="8dp"
                android:hint="Search symptoms..."
                android:textColorHint="@color/black"
                android:padding="12dp" />

            <!-- Navigation Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="24dp">

                <Button
                    android:id="@+id/exploreSymptomsButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Explore Symptoms"
                    android:backgroundTint="#4CAF50"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/foodSuggestionsButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Food Suggestions"
                    android:backgroundTint="#4CAF50"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Featured Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Featured"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                android:textColor="#333333" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/symptomOfTheDayImage"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:src="@drawable/food4"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/foodHighlightImage"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:src="@drawable/food2"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Health Tips -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health Tip of the Day"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/healthTipText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stay hydrated â€“ drink at least 8 glasses of water daily!"
                android:textSize="16sp"
                android:textColor="#757575"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomnav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:itemBackground="@color/white"
        app:itemIconTint="@color/blue"
        app:itemTextColor="@color/black"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/menu" />
</RelativeLayout>
